{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tsugie UI Schema v1.0",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "string",
      "enum": ["1.0"]
    },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/node"
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/node"
      }
    }
  },
  "anyOf": [
    { "required": ["frames"] },
    { "required": ["nodes"] }
  ],
  "definitions": {
    "colorHex": {
      "type": "string",
      "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{8})$"
    },
    "colorObject": {
      "type": "object",
      "required": ["r", "g", "b"],
      "properties": {
        "r": { "type": "number" },
        "g": { "type": "number" },
        "b": { "type": "number" },
        "a": { "type": "number" }
      },
      "additionalProperties": false
    },
    "colorInput": {
      "oneOf": [
        { "$ref": "#/definitions/colorHex" },
        { "$ref": "#/definitions/colorObject" }
      ]
    },
    "gradientStop": {
      "type": "object",
      "required": ["position", "color"],
      "properties": {
        "position": { "type": "number" },
        "color": { "$ref": "#/definitions/colorInput" },
        "opacity": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": true
    },
    "paint": {
      "oneOf": [
        { "$ref": "#/definitions/colorHex" },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["SOLID", "GRADIENT_LINEAR", "GRADIENT_RADIAL", "GRADIENT_ANGULAR", "GRADIENT_DIAMOND", "IMAGE"]
            },
            "color": { "$ref": "#/definitions/colorInput" },
            "opacity": { "type": "number", "minimum": 0, "maximum": 1 },
            "gradientStops": {
              "type": "array",
              "items": { "$ref": "#/definitions/gradientStop" }
            },
            "gradientTransform": {
              "type": "array",
              "items": {
                "type": "array",
                "items": { "type": "number" }
              }
            },
            "imageHash": { "type": "string" },
            "imageUrl": { "type": "string" },
            "imageBytesBase64": { "type": "string" },
            "scaleMode": { "type": "string" },
            "rotation": { "type": "number" },
            "scalingFactor": { "type": "number" },
            "imageTransform": {
              "type": "array",
              "items": {
                "type": "array",
                "items": { "type": "number" }
              }
            }
          },
          "additionalProperties": true
        }
      ]
    },
    "effect": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["DROP_SHADOW", "INNER_SHADOW", "LAYER_BLUR", "BACKGROUND_BLUR"]
        },
        "color": { "$ref": "#/definitions/colorInput" },
        "offset": {
          "type": "object",
          "properties": {
            "x": { "type": "number" },
            "y": { "type": "number" }
          },
          "additionalProperties": false
        },
        "radius": { "type": "number" },
        "spread": { "type": "number" },
        "blendMode": { "type": "string" },
        "visible": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "position": {
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      },
      "additionalProperties": false
    },
    "size": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": { "type": "number" },
        "height": { "type": "number" }
      },
      "additionalProperties": false
    },
    "layout": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["NONE", "HORIZONTAL", "VERTICAL"]
        },
        "primaryAxisSizingMode": {
          "type": "string",
          "enum": ["AUTO", "FIXED"]
        },
        "counterAxisSizingMode": {
          "type": "string",
          "enum": ["AUTO", "FIXED"]
        },
        "primaryAxisAlignItems": {
          "type": "string",
          "enum": ["MIN", "MAX", "CENTER", "SPACE_BETWEEN"]
        },
        "counterAxisAlignItems": {
          "type": "string",
          "enum": ["MIN", "MAX", "CENTER", "BASELINE"]
        },
        "layoutWrap": {
          "type": "string",
          "enum": ["NO_WRAP", "WRAP"]
        },
        "itemSpacing": { "type": "number" },
        "counterAxisSpacing": { "type": "number" },
        "paddingLeft": { "type": "number" },
        "paddingRight": { "type": "number" },
        "paddingTop": { "type": "number" },
        "paddingBottom": { "type": "number" }
      },
      "additionalProperties": true
    },
    "layoutSelf": {
      "type": "object",
      "properties": {
        "layoutAlign": {
          "type": "string",
          "enum": ["MIN", "CENTER", "MAX", "STRETCH", "INHERIT"]
        },
        "layoutGrow": { "type": "number" },
        "layoutPositioning": {
          "type": "string",
          "enum": ["AUTO", "ABSOLUTE"]
        },
        "minWidth": { "type": "number" },
        "maxWidth": { "type": "number" },
        "minHeight": { "type": "number" },
        "maxHeight": { "type": "number" },
        "strokesIncludedInLayout": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "node": {
      "type": "object",
      "required": ["id", "name", "type", "size"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "type": {
          "type": "string",
          "enum": [
            "FRAME",
            "GROUP",
            "COMPONENT",
            "SECTION",
            "RECTANGLE",
            "ELLIPSE",
            "LINE",
            "POLYGON",
            "STAR",
            "VECTOR",
            "TEXT",
            "SLICE",
            "INSTANCE",
            "BUTTON"
          ]
        },
        "componentId": { "type": "string" },
        "componentKey": { "type": "string" },
        "position": { "$ref": "#/definitions/position" },
        "size": { "$ref": "#/definitions/size" },
        "visible": { "type": "boolean" },
        "locked": { "type": "boolean" },
        "opacity": { "type": "number", "minimum": 0, "maximum": 1 },
        "blendMode": { "type": "string" },
        "rotation": { "type": "number" },
        "clipsContent": { "type": "boolean" },
        "isMask": { "type": "boolean" },
        "cornerRadius": { "type": "number" },
        "topLeftRadius": { "type": "number" },
        "topRightRadius": { "type": "number" },
        "bottomLeftRadius": { "type": "number" },
        "bottomRightRadius": { "type": "number" },
        "fills": {
          "type": "array",
          "items": { "$ref": "#/definitions/paint" }
        },
        "strokes": {
          "type": "array",
          "items": { "$ref": "#/definitions/paint" }
        },
        "effects": {
          "type": "array",
          "items": { "$ref": "#/definitions/effect" }
        },
        "strokeWeight": { "type": "number", "minimum": 0 },
        "strokeAlign": { "type": "string" },
        "strokeCap": { "type": "string" },
        "strokeJoin": { "type": "string" },
        "dashPattern": {
          "type": "array",
          "items": { "type": "number" }
        },
        "miterLimit": { "type": "number" },
        "constraints": {
          "type": "object",
          "properties": {
            "horizontal": { "type": "string" },
            "vertical": { "type": "string" }
          },
          "additionalProperties": true
        },
        "layout": { "$ref": "#/definitions/layout" },
        "layoutSelf": { "$ref": "#/definitions/layoutSelf" },
        "characters": { "type": "string" },
        "fontName": {
          "type": "object",
          "properties": {
            "family": { "type": "string" },
            "style": { "type": "string" }
          },
          "additionalProperties": false
        },
        "fontFamily": { "type": "string" },
        "fontStyle": { "type": "string" },
        "fontWeight": { "type": "number" },
        "fontSize": { "type": "number" },
        "lineHeightPx": { "type": "number" },
        "lineHeight": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string" }
          },
          "additionalProperties": true
        },
        "letterSpacing": {
          "type": "object",
          "properties": {
            "value": { "type": "number" },
            "unit": { "type": "string" }
          },
          "additionalProperties": true
        },
        "textAlignHorizontal": {
          "type": "string",
          "enum": ["LEFT", "CENTER", "RIGHT", "JUSTIFIED"]
        },
        "textAlignVertical": {
          "type": "string",
          "enum": ["TOP", "CENTER", "BOTTOM"]
        },
        "textAutoResize": {
          "type": "string",
          "enum": ["NONE", "WIDTH_AND_HEIGHT", "HEIGHT", "TRUNCATE"]
        },
        "textCase": { "type": "string" },
        "textDecoration": { "type": "string" },
        "paragraphSpacing": { "type": "number" },
        "paragraphIndent": { "type": "number" },
        "textFills": {
          "type": "array",
          "items": { "$ref": "#/definitions/paint" }
        },
        "children": {
          "type": "array",
          "items": { "$ref": "#/definitions/node" }
        }
      },
      "additionalProperties": true
    }
  }
}
